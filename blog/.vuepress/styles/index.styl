.custom-block
  margin 1rem 0
  padding .1rem 1.5rem
  border-radius 0.4rem
  border-left-width .5rem
  border-left-style solid
  background-color #f0f4f8
  .custom-block-title
    font-weight bold
    margin-bottom -.4rem

.custom-block
  &.danger
    background-color #ffe6e6
    border-color #c00
    color #4d0000

.custom-block
  &.warning
    background-color rgba(255,229,100,.3)
    border-color #e7c000
    color #6b5900

.custom-block
  &.tip
    background-color #f3f5f7
    border-color #42b983
